generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                  Int        @id @default(autoincrement())
  name                String
  userId              String
  price               Float
  description         String
  inStock             Boolean    @default(true)
  total_quantity      Int
  min_order_quantity  Int
  hsn_code            String
  condition           Condition
  category            String
  preference          Preference
  preferred_countries String[]   @default([])
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  user                User       @relation(fields: [userId], references: [id])
}

model User {
  id                         String    @id @default(cuid())
  businessRegistrationNumber String
  city                       String
  companyType                String
  companyWebsite             String
  country                    String
  countryOfRegistration      String
  createdAt                  DateTime  @default(now())
  documentFile               String?
  fullName                   String
  jobTitle                   String
  legalCompanyName           String
  mobilePhone                String
  password                   String
  postalCode                 String
  state                      String
  streetAddress              String
  taxID                      String
  updatedAt                  DateTime  @updatedAt
  workEmail                  String    @unique
  products                   Product[]
}

enum Condition {
  new
  used
  refurbished
}

enum Preference {
  private
  selected_countries
  public
}
